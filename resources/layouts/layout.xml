<layout id="WatchFace">
    <drawable id="battery" class="Battery"/>
    <label id="BatteryDisplay" x="center" y="5%" font="@Fonts.BatteryIcons" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE"/>

    <label id="HeartRateDisplay" x="center" y="20%" font="Graphics.FONT_SMALL" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE"/>
    
    <label id="HourDisplay" x="45%" y="center" font="@Fonts.Roboto100" justification="Graphics.TEXT_JUSTIFY_RIGHT" color="Graphics.COLOR_WHITE" />
    <label id="ColonDisplay" x="center" y="center" font="@Fonts.Roboto100" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
    <label id="MinuteDisplay" x="55%" y="center" font="@Fonts.Roboto100" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_RED" />

    <label id="DateDisplay" x="center" y="70%" font="Graphics.FONT_SMALL" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
</layout>
