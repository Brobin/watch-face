<settings>

    <group id="time" title="@Strings.Time">

        <setting propertyKey="@Properties.HourColor" title="@Strings.HourColor">
            <settingConfig type="list">
                <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
                <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
                <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.PadHour" title="@Strings.PadHour">
            <settingConfig type="boolean" />
        </setting>

        <setting propertyKey="@Properties.MinuteColor" title="@Strings.MinuteColor">
            <settingConfig type="list">
                <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
                <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
                <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            </settingConfig>
        </setting>
    </group>

    <group id="date" title="@Strings.Date">
        <setting propertyKey="@Properties.DateColor" title="@Strings.DateColor">
            <settingConfig type="list">
                <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
                <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
                <listEntry value="0x00FF00">@Strings.ColorGreen</listEntry>
            </settingConfig>
        </setting>

        <setting propertyKey="@Properties.HideMonth" title="@Strings.HideMonth">
            <settingConfig type="boolean" />
        </setting>
    </group>

</settings>